<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Reward Name -->
        <TextView
            android:id="@+id/rewardNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reward Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- Reward Description -->
        <TextView
            android:id="@+id/rewardDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reward description goes here"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black" />

        <!-- Points Required -->
        <TextView
            android:id="@+id/rewardPointsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points Required: 100"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black" />

        <!-- Button to Redeem -->
        <Button
            android:id="@+id/redeemButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redeem"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
